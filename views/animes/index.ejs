<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/head') %>
<body>
    <%- include ('../partials/header') %>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Completion Status</th>
            </tr>
        </thead>
        <tbody>
            <% animes.forEach(a => { %>  
                <tr>
                    <td><%= a.title %></td>
                    <td><%= a.completionStatus %></td>
                    <td>
                        <a href="/animes/<%= a.id %>">DETAILS</a>
                    </td>
                </tr>
            <% }) %>        
        </tbody>
    </table>    
    <%- include ('../partials/footer') %>
</body>
</html>